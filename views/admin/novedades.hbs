<div class="container" style="margin-top:  100px; ">
  <!--inicio fila 1.-->
  <div class="row">
    <div class="col">
      <p class="text-end">
        <span>hola {{usuario}} </span>
        <a href="/admin/login/logout" class="btn btn-danger">Cerrar Sesion
          <i class="bi bi-box-arrow-right"></i></a>
      </p>

    </div>
  </div>
  <!--Cierre fila 1.-->

  <div class="row">
    <!--inicio fila 2.-->
    <div class="col-7" style="margin-right:-9px;">
      <h2> LISTADO DE PATAS FLAMEADAS</h2>
    </div>
    <div class="col-5 text-end">
      <a href="" class="btn btn-success"><i class="bi bi-plus-circle"></i>
        Nuevo</a>

    </div>
    <!--Cierre fila 2.-->

    <div class="row">
      <div class="col">
        <table class="table">
          <thead>
            <tr class="table-dark">
              <th scope="col">#</th>
              <th scope="col">Patas</th>
              <th scope="col" class="text-end">Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each novedades}}
            <tr>
              <th scope="row">{{Id}}</th>
              <td>{{Titulo}}</td>
              <td class="text-end">
                <a href="" class="btn btn-secondary"><i
                    class="bi bi-pencil-fill"
                  ></i></a>
                <a href=" /admin/novedades/eliminar/{{Id}}" class="btn btn-secondary"><i
                    class="bi bi-trash3-fill"
                  ></i></a>
              </td>

            </tr>
           {{/each}}
          </tbody>
        </table>

      </div>
    </div>

  </div>

</div>