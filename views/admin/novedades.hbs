<div class="container" style="margin:100px auto">
    {{!-- fila 1--}}
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{persona}}!</span>
                <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar sesi√≥n <i class="bi bi-box-arrow-right"
                        aria-hidden="true"></i></a>
            </p>
        </div>
    </div>
    {{!-- fin fila 1--}} {{!-- inicio fila 2--}}
    <div class="row">
        <div class="col-7" style="margin-top: -9px;">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-2 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="bi bi-plus-circle"></i>
                Nuevo</a>
        </div>

        <div class="col-3 text-right">
            <form class="form-inline d-flex" action="/admin/novedades" method="get">
                <input class="form-control mr-2" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if
                    q}} value="{{q}}" {{/if}}>
                <button class="btn btn-success my-2 my-sm-0" type="submit">
                    <i class="bi bi-search" aria-hidden="true"></i>
                </button>
            </form>
        </div>



    </div>
    {{!-- fin fila 2--}}
    {{!-- inicio fila 3.--}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">imagen</th>
                        <th scope="col" class=" text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr class="tt">
                        <th scope="row">{{id}}</th>
                        <td>{{Titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i
                                    class="bi bi-trash3-fill"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

            {{#if is_search}}
            {{#unless novedades.Length}}
            No se encontraron resultados para "<b>{{q}}</b>"
            {{/unless}}
            {{/if}}
        </div>
    </div> {{!-- fin fila 3 --}}
</div>