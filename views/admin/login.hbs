<div class="container" style="margin: 100px ;">
  <div class="row" >
    <div class="col">
      <form action="/views/admin/login.hbs" method="post">
        <div class="form-group">
          <label for="usuario" >Usuario</label>
          <input
            type="text"
            class="form-control"
            id="usuario"
            aria-describedby="emailHelp" name="usuario"
          />
          
        </div>
        <div class="form-group">
          <label for="Password" >Password</label>
          <input
            type="password"
            class="form-control"
            id="Password"
            name="password"
          />
        </div>
        <button type="submit"  class="btn btn-outline-success"  style="margin-top: 30px">Enviar</button>
    
      </form>
      {{#if error}}
      <p>usuario o constrase√±a invalida!</p>
      {{/if}}
    </div>
  </div>
</div>