
<link rel="stylesheet" href="/stylesheets/login.css">
<div class="container login" style="margin: 100px ;">
  <div class="row" >
    <div class="col">
      <form action="/admin/login" method="post" class="formulario">
        <div class="form-group">
          <label class="usuario" for="usuario" >Usuario</label>
          <input
            type="text"
            class="form-control"
            id="usuario"
            aria-describedby="emailHelp" name="usuario"
        
             >
        </div>
        <div class="form-group ">
          <label  for="Password"  >Password </label>
          <input 
            type="password"
            class="form-control" 
            id="Password"
            name="password"
         
          />
          
        </div>
        <button type="submit"  class="btn btn-outline-success"  style="margin-top: 30px">Enviar<i class="bi bi-send aling-left"></i></button>
    
      </form>
      {{#if error}}
      <p><i class="bi bi-x-octagon"></i>usuario o constrase√±a invalida!</p>
      {{/if}}
    </div>
  </div>
</div>